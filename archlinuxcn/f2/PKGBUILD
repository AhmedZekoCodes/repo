# Maintainer: aulonsal <seraur at aulonsal dot com>

pkgname=f2
pkgver=2.0.2
pkgrel=1
pkgdesc="A cross-platform command-line tool for batch renaming files and directories quickly and safely"
arch=('x86_64' 'aarch64')
url="https://github.com/ayoisaiah/${pkgname}"
license=('MIT')
depends=('glibc')
makedepends=(
    'go'
    'gotestfmt'
    'just'
    'perl-image-exiftool'
)
conflicts=("${pkgname}-bin")
source=("${pkgname}-${pkgver}.tar.gz::${url}/archive/v${pkgver}.tar.gz")
b2sums=('cb6c59b693638b9253d0178cdd679aa5c9af712359d3895d92010c81ddba01b330b353924fbf0b7d41be0a7567eff06925ad105e6f627bf37235420f8062ebff')

build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    export CGO_CPPFLAGS="${CPPFLAGS}"
    export CGO_CFLAGS="${CFLAGS}"
    export CGO_CXXFLAGS="${CXXFLAGS}"
    export CGO_LDFLAGS="${LDFLAGS}"
    export GOFLAGS="-buildmode=pie -trimpath -ldflags=-linkmode=external -mod=readonly -modcacherw"
    just build
}

check() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    just test
}

package() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    install -Dm0644 LICENCE -t "${pkgdir}/usr/share/licenses/${pkgname}/"
    install -Dm0644 README.md -t "${pkgdir}/usr/share/doc/${pkgname}/"
    install -Dm0755 "bin/${pkgname}" -t "${pkgdir}/usr/bin/"
}
