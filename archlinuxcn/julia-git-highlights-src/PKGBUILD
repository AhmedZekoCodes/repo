_commit=715e1a235d30257a2df7f1637c8a186449623121
pkgrel=1
pkgdesc="Highlights.jl"
url="https://github.com/JuliaDocs/Highlights.jl.git"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia-git)
