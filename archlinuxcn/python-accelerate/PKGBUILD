optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
noextract=()
sha512sums=('0c8ce328add4164f8144e2de089594a0e1bf3c171317ba1486ee49d7040e8c28e5faa059b32edfa53466f6ff61ae8544cf3c0e93cf084e8a2c09d49b5c321029')
validpgpkeys=()

build() {
    cd "$_name-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "$_name-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
}

