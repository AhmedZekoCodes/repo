optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
noextract=()
sha512sums=('ad320d3d7c5505164e0ad9eb51778b74a7d5447c03c32afc6b5e59ee346fcc6c7b402d0f19df75660f78f92c31371707611a98088001b0a7a7df2b954f0b323e')
validpgpkeys=()

build() {
    cd "$_name-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "$_name-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
}

