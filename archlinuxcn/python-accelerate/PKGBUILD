optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
noextract=()
sha512sums=('c60d8cd26f840a46deff02d27cc73e7a67faf1fbd1893a7617a075aea74eb51bc9d0ae96cf524e82ea6c94eed8627dfacca697eca830ce2f16ac8516ac13e972')
validpgpkeys=()

build() {
    cd "$_name-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "$_name-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
}

