optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
noextract=()
sha512sums=('f64bac0acc0cd6a11cbec41f41e1f5c063256b79777a910fff60f4e1df2ca522ce332f3431c0e39a3559aa55b6607eb47f009e3aa4059397c126652daa93c236')
validpgpkeys=()

build() {
    cd "$_name-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "$_name-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
}

