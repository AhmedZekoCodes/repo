optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
noextract=()
sha512sums=('7e0cf5db411c829e55b122dfa8cd393afd74ba7b3d3b179aa315ee52f2058abcb0ba919865884b0397eba2ca5163e632723c68e3f538e1e15c31ddfed06795ae')
validpgpkeys=()

build() {
    cd "$_name-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "$_name-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
}

