noextract=()
sha512sums=('2e40370c7bf90ffaed1c38b8d92ddd6d3dda54884a5af4667ff274e04439700b67f65421bdec499515fd3c31dabffae282ae3294bf0a8626114f2652bb5829f8')
validpgpkeys=()

build() {
    cd "$_name-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "$_name-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
}

