optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
noextract=()
sha512sums=('8da31e1dcd37d3e921262ada0508b1701f33e5ebaea65842fc63f93a6c91cee4b2c09a1924d285ba89935401a1cb305bfdf2b1c589a312e2dcd0e9a2ac3458fb')
validpgpkeys=()

build() {
    cd "$_name-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "$_name-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
}

