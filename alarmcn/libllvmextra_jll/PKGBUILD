pkgname=libllvmextra_jll
pkgver=9.1.3
_commit=b0e9f6806605a1583e7ccef4f3d2039431959a16
pkgrel=2
pkgdesc="LLVM.jl"
url="https://github.com/maleadt/LLVM.jl.git"
arch=(aarch64 armv7h x86_64)
license=('MIT')
makedepends=(git cmake llvm-julia-git)
source=("git+https://github.com/maleadt/LLVM.jl.git#commit=$_commit"
        0001-Fix-llvm-19-build.patch
        0002-Handle-new-rwm-types-in-llvm-19.patch)
sha256sums=('c0091f6ff13814e693de92c0038ddb2d0d53c4cffd88f8b6b61ce99e3d8b08c1'
            'ff3bff8232d312666082ceb4797215717527c967a60306d8ccdbae8d15eff4f3'
            '5f9830a7f49fddb4889d3e691a108d54764acff7a79ae7bfc215b59f75118739')
options=('debug')

_versioned_llvm=

prepare() {
  cd LLVM.jl
  patch -Np1 --no-backup-if-mismatch < ../0001-Fix-llvm-19-build.patch
  patch -Np1 --no-backup-if-mismatch < ../0002-Handle-new-rwm-types-in-llvm-19.patch
}

build() {
  cd LLVM.jl/deps/LLVMExtra

  mkdir -p build
  cd build
  if [[ -n $_versioned_llvm ]]; then
    export CMAKE_PREFIX_PATH=/usr/lib/llvm$_versioned_llvm/
  fi
  cmake .. -DCMAKE_BUILD_TYPE=RelWithDebInfo \
        -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  if [[ -n $_versioned_llvm ]]; then
    _llvm_ver=$(llvm-config-${_versioned_llvm} --version)
  else
    _llvm_ver=$(llvm-config --version)
  fi
  [[ $_llvm_ver =~ ^([0-9]*).* ]]
  llvm_maj_ver=${BASH_REMATCH[1]}
  ((next_llvm_maj=llvm_maj_ver + 1))

  _deps=("llvm-libs-julia-git>=${llvm_maj_ver}.0"
         "llvm-libs-julia-git<${next_llvm_maj}.0")

  depends+=("${_deps[@]}")

  cd LLVM.jl/deps/LLVMExtra/build

  make install DESTDIR="${pkgdir}"

  mkdir "${pkgdir}/usr/lib/julia"
  mv "${pkgdir}/usr/lib/"libLLVMExtra-* "${pkgdir}/usr/lib/julia"
}
