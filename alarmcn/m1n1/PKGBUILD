# Maintainer: Hector Martin <marcan@marcan.st>

pkgname=m1n1
pkgver=1.4.14
pkgrel=2
pkgdesc='Asahi Linux bootloader'
arch=('aarch64')
url='http://asahilinux.org'
license=('MIT')
makedepends=(git imagemagick)
source=(
  "git+https://github.com/AsahiLinux/m1n1#tag=v${pkgver}"
)
sha256sums=('600c637e1cc4fd7813b5d72c832dab0823c892c7064536cd73b510d933ea7ff0')
b2sums=('0f30c29b6e0a59880b105a6df13862bbe1ffc269fee1342e4ec2c1e075dbff85dddc87d09e75d672c9b52dbbf758034952f3bcec79627b1401a4e0bfccbb5a13')

prepare() {
  cd m1n1
  git submodule update --init --recursive
}

build() {
  cd m1n1
  make ARCH= RELEASE=1 -j1
}

package() {
  install -Dt "$pkgdir/usr/lib/asahi-boot" -m644 "m1n1/build/m1n1.bin"
  install -Dm644 m1n1/LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
